{
    "extends": [
        "react-app",
        "react-app/jest", 
        "plugin:prettier/recommended", 
        "prettier"
    ],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "node":true,
        "es6": true
    },
    "parser": "@babel/eslint-parser",
    "rules": {
        "prettier/prettier": [
            "error", 
            {
                "singleQuote": true,
                "parser": "flow",
                "endOfLine": "auto"
            }
        ],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
      }
}